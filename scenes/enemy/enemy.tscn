script/source = "extends CharacterBody2D


var player = null
var mov_speed = 100
var chase = false
var _elapsed_time: = 0.0

func _ready():
	$AnimationPlayer.play(\"idle\")
	GlobalUtils.player_spawned.connect(_on_player_spawned)

func _physics_process(delta):
	var velocity_dir = Vector2()
	if chase and is_instance_valid(player):
		velocity_dir = (player.global_position-global_position).normalized()
		velocity = velocity_dir*mov_speed
		$AnimationPlayer.play(\"walk\")
	if velocity.length() > mov_speed*0.5:
		$SpriteContainer.scale.x = -sign(velocity.x)
	move_and_slide()
	if velocity.length() > mov_speed*0.5:
		_elapsed_time += delta
		if _elapsed_time >= 1:
			_elapsed_time = 0
			GlobalUtils.add_score(1)


func _on_player_spawned(pl):
	print(\"got_player\")
	player = pl

func die():
	GlobalUtils.add_score(10)
	queue_free()


func _on_area_2d_body_entered(body):
	if chase:
		if body.has_method(\"die\"):
			GlobalUtils.add_score(-100)
			body.die(\"you didn't escape in time!\")
			return
	var i = randi()%7
	var check = 10 - GlobalUtils.enemy_killed 
	print(i, \" \",check)
	if i > check:
		$AnimationPlayer.play(\"transform\")
		GlobalUtils.chase_running = true
	else:
		GlobalUtils.enemy_killed += 1
		die()

func _on_animation_player_animation_finished(anim_name):
	if anim_name == \"transform\":
		chase = true
		
